<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:context=".KjppDetailActivity">

            <TextView
                android:id="@+id/title_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="40dp"
                android:text="Detail KJPP"
                android:textSize="15dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_detail">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_no_induk"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="No Induk"
                        android:textColor="#93A174"
                        android:textSize="14dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/no_induk"
                        android:layout_width="206dp"
                        android:layout_height="35dp"
                        android:background="@drawable/custom_profile"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_nama"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="Nama"
                        android:textColor="#93A174"
                        android:textSize="14dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/nama"
                        android:layout_width="206dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:background="@drawable/custom_profile"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="Perizinan"
                    android:textColor="#93A174"
                    android:textSize="14dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_no_perizinan"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:text="No."
                        android:textColor="#93A174"
                        android:textSize="14dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/no_perizinan"
                        android:layout_width="206dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:background="@drawable/custom_profile"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_tgl_perizinan"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:text="Tanggal"
                        android:textColor="#93A174"
                        android:textSize="14dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tgl_perizinan"
                        android:layout_width="206dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:background="@drawable/custom_profile"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_klasifikasi_perizinan"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:text="Klasifikasi"
                        android:textColor="#93A174"
                        android:textSize="14dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/klasifikasi_perizinan"
                        android:layout_width="206dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:background="@drawable/custom_profile"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_alamat"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="alamat"
                        android:textColor="#93A174"
                        android:textSize="14dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/alamat"
                        android:layout_width="206dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:background="@drawable/custom_profile"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_telp"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="No. Telepon"
                        android:textColor="#93A174"
                        android:textSize="14dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/telp"
                        android:layout_width="206dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:background="@drawable/custom_profile"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/close_detail_btn"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Tutup"
                        android:textSize="14dp"
                        android:textAllCaps="false"
                        android:backgroundTint="#AEAEAE"
                        android:layout_marginRight="10dp"
                        />
                </LinearLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>