<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:context=".KjppDetailActivity">

            <LinearLayout
                android:id="@+id/title_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/backArrowBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    android:background="@android:color/transparent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="40dp"
                        android:text="Detail KJPP"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="left|center"
                        android:textSize="15.5dp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="83dp"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        android:layout_marginTop="3dp"
                        app:layout_constraintTop_toBottomOf="@+id/txt" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_detail">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_no_induk"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="No Induk"
                        android:textColor="#627E97"
                        android:textSize="14dp"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/no_indukdetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:background="@drawable/custom_profile"
                        android:layout_marginLeft="10dp"
                        android:text="@string/no_kjpp"
                        android:gravity="center|left|left"
                          android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:textSize="14dp"  />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_nama"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="Nama"
 android:textColor="#627E97"
                        android:textSize="14dp"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/namadetailkjpp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:background="@drawable/custom_profile"
                        android:layout_marginLeft="10dp"
                        android:text="@string/nama_kjpp"
                        android:gravity="center|left|left"
                          android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:textSize="14dp"  />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="Perizinan"
                    android:textColor="#627E97"
                    android:textSize="14dp"
                    android:fontFamily="@font/roboto"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_no_perizinan"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:text="No."
                        android:textColor="#627E97"
                        android:textSize="14dp"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/no_perizinandetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:background="@drawable/custom_profile"
                        android:layout_marginLeft="10dp"
                        android:text="@string/no_perizinan"
                        android:gravity="center|left|left"
                          android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:textSize="14dp"  />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_tgl_perizinan"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:text="Tanggal"
                        android:textColor="#627E97"
                        android:textSize="14dp"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tgl_perizinandetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:gravity="center|left|left"                        android:background="@drawable/custom_profile"
                        android:layout_marginLeft="10dp"
                        android:text="@string/tgl_perizinan"
                          android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:textSize="14dp"  />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_klasifikasi_perizinan"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:text="Klasifikasi"
                        android:textColor="#627E97"
                        android:textSize="14dp"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/klasifikasi_perizinandetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:gravity="center|left|left"                        android:background="@drawable/custom_profile"
                        android:layout_marginLeft="10dp"
                        android:text="@string/klasifikasi_perizinan"
                          android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:textSize="14dp"  />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_alamat"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="Alamat"
                        android:textColor="#627E97"
                        android:textSize="14dp"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/alamatdetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:gravity="center|left|left"                        android:background="@drawable/custom_profile"
                        android:layout_marginLeft="10dp"
                        android:text="@string/alamat_kjpp"
                          android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:textSize="14dp"  />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_telp"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="No. Telepon"
                        android:textColor="#627E97"
                        android:textSize="14dp"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/telpdetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:background="@drawable/custom_profile"
                        android:layout_marginLeft="10dp"
                        android:text="@string/telp_kjpp"
                          android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:textSize="14dp"  />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/close_detail_btn"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/red"
                        android:text="Tutup"
                        android:textAllCaps="false"
                        android:textSize="14dp" />
                </LinearLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>