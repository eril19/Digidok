<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:context=".MitraDetailActivity2
">

            <LinearLayout
                android:id="@+id/title_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Detail Mitra"
                    android:textSize="15.5dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <View
                    android:id="@+id/view"
                    android:layout_width="83dp"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginTop="3dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_detail">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_id_mitra"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Kode Mitra"
                        android:fontFamily="@font/roboto"
                        android:textColor="#627E97"
                        android:textSize="14dp"
                        android:visibility="visible"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/id_mitra"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:background="@drawable/custom_profile"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_tahun_gabung"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Tahun Gabung"
                        android:fontFamily="@font/roboto"
                        android:textColor="#627E97"
                        android:textSize="14dp"
                        android:visibility="visible"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/tahun_gabung"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:background="@drawable/input_background"
                        android:textColor="@color/black"
                        android:textSize="14dp"  />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_jenis_mitra"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Jenis"
                        android:fontFamily="@font/roboto"
                        android:textColor="#627E97"
                        android:textSize="14dp"
                        android:visibility="visible"
                        tools:visibility="visible" />

                    <Spinner
                        android:id="@+id/spinner_jenis_mitra"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="35dp"
                        android:padding="6dp"
                        android:background="@drawable/dd_background" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_status_mitra"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Status"
                        android:fontFamily="@font/roboto"
                        android:textColor="#627E97"
                        android:textSize="14dp"
                        android:visibility="visible"
                        tools:visibility="visible" />

                    <Spinner
                        android:id="@+id/spinner_status_mitra"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="35dp"
                        android:padding="6dp"
                        android:background="@drawable/dd_background" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_profil_perusahaan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Profil Perusahaan"
                        android:fontFamily="@font/roboto"
                        android:textColor="#627E97"
                        android:textSize="14dp"
                        android:visibility="visible"
                        tools:visibility="visible" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_gravity="center">

                        <ImageButton
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:src="@drawable/ic_upload"
                            android:scaleType="fitCenter"
                            android:padding="5dp"
                            android:backgroundTint="@android:color/transparent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*file pdf dan maksimal 10mb"
                            android:layout_marginLeft="8dp"
                            android:textColor="#616161"
                            android:textSize="14dp"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/prev_detail_btn"
                        android:layout_width="150dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Sebelumnya"
                        android:textSize="14dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textAllCaps="false"
                        android:backgroundTint="#AAAAAA"
                        android:layout_marginRight="10dp"
                        />

                    <Button
                        android:id="@+id/close_detail_btn"
                        android:layout_width="150dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Tutup"
                        android:textSize="14dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textAllCaps="false"
                        android:backgroundTint="#676767"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/save_detail_mitra_btn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="Simpan"
                    android:textSize="14dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textAllCaps="false"
                    android:backgroundTint="#104B7C"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
