            <include
                android:id="@+id/include3"
                layout="@layout/toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >
            </include>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/include3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_id_mitra"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Kode Mitra"
                        android:fontFamily="@font/roboto"
                        android:textColor="#627E97"
                        android:textSize="14dp"
                        android:visibility="visible"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/id_mitra"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@drawable/custom_profile"
                        android:padding="6dp"
                        android:text="(Auto)"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:visibility="visible"
                        tools:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_tahun_gabung"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Tahun Gabung"
                        android:fontFamily="@font/roboto"
                        android:textColor="#627E97"
                        android:textSize="14dp"
                        android:visibility="visible"
                        tools:visibility="visible" />

                    <EditText
                        android:id="@+id/tahun_gabung"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:background="@drawable/input_background"
                        android:textColor="@color/black"
                        android:textSize="14dp"  />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_jenis_mitra"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Jenis"
                        android:fontFamily="@font/roboto"
                        android:textColor="#627E97"
                        android:textSize="14dp"
                        android:visibility="visible"
                        tools:visibility="visible" />

                    <Spinner
                        android:id="@+id/spinner_jenis_mitra"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="2"
                        android:background="@drawable/dd_background"
                        android:focusableInTouchMode="false"
                        android:padding="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_status_mitra"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Status"
                        android:fontFamily="@font/roboto"
                        android:textColor="#627E97"
                        android:textSize="14dp"
                        android:visibility="visible"
                        tools:visibility="visible" />

                    <Spinner
                        android:id="@+id/spinner_status_mitra"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="2"
                        android:background="@drawable/dd_background"
                        android:padding="6dp"
                        android:saveEnabled="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_profil_perusahaan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Profil Perusahaan"
                        android:fontFamily="@font/roboto"
                        android:textColor="#627E97"
                        android:textSize="14dp"
                        android:visibility="visible"
                        tools:visibility="visible" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_gravity="center">

                        <ImageButton
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_pdf"
                            android:scaleType="fitCenter"
                            android:padding="1dp"
                            android:backgroundTint="@android:color/transparent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*file pdf dan maksimal 10mb"
                            android:layout_marginLeft="8dp"
                            android:textColor="#616161"
                            android:textSize="14dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/save_detail_mitra_btn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#104B7C"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Simpan"
                    android:textAllCaps="false"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/prev_detail_btn"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="#104B7C"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Sebelumnya"
                        android:textAllCaps="false"
                        android:textSize="14dp" />

                    <Button
                        android:id="@+id/next_detail_btn"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="#6A809C"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Selanjutnya"
                        android:textAllCaps="false"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/close_detail_btn"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/red"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Tutup"
                        android:textAllCaps="false"
                        android:textSize="14dp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
